@model Model.Account.AccountInternal
@{
    Layout = null;
}


<body style="margin: 0; padding: 0;">
    <table width="100%" border="0" cellspacing="0" cellpadding="0" style="font-family:'Lucida Sans Unicode', 'Lucida Grande', sans-serif;">
        <tr>
            <td align="center" style="background:#0e79bf; padding:20px 0;"><a href="http://www.iloop.com" target="_blank"><img src="cid:{0}" title="iLoop, Be In The Loop" alt="iLoop, Be In The Loop" /></a></td>
        </tr>
        <tr>
            <td style="background:#f5f5f5; padding:30px;">
                <table width="100%" border="0" cellspacing="5" cellpadding="5" style="background:#fff; color:#666; font-size:14px; line-height:24px;">
                    <tr>
                        <td style="font-size:24px; padding-top:10px; color:#0e79bf;">Dear @Model.FirstName,</td>
                    </tr>
                    <tr>
                        <td><b>Congratulations!</b> You are successfully registered with the iLoop system. Please activate your account to be a registered user by clicking on the following button. </td>
                    </tr>
                    <tr>
                        <td>
                            <a href="@Model.UrlRegistrationLink" style="display:inline-block; padding:8px 16px; color:#fff;
          text-decoration:none; background:#0e79bf; border-radius:3px;">Activate Your Account</a>
                        </td>
                    </tr>
                    <tr>
                        <td>If the above URL does not work, please use your Web browser to open:</td>
                    </tr>
                    <tr>
                        <td><a href="@Model.UrlVerificationLink" style="color:#0e79bf; text-decoration:none;" onmouseover="this.style.textDecoration='underline'" onmouseout="this.style.textDecoration='none'">@Model.UrlVerificationLink</a></td>
                    </tr>
                    <tr>
                        <td>Avoid extra spaces for successful login. Enter your username and Activation ID, in the above URL</td>
                    </tr>
                    <tr>
                        <td>Note: Your Activation ID is NOT the same as your password(Choose unique password when you are registered).</td>
                    </tr>
                    <tr>
                        <td>
                            <table width="100%" border="0" cellspacing="2" cellpadding="2" style="font-size:13px; color:#666;">
                                <tr>
                                    <td>Your Username is</td>
                                    <td>@Model.Email or @Model.UserName</td>
                                </tr>
                                <tr>
                                    <td>Your Activation ID is</td>
                                    <td>@Model.UserGuid</td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td>For further support to sign in : <a href="http://www.iloop.com/sendmessage" style="color:#0e79bf; text-decoration:none;" onmouseover="this.style.textDecoration='underline'" onmouseout="this.style.textDecoration='none'">http://www.iloop.com/sendmessage</a></td>
                    </tr>
                    <tr>
                        <td>
                            All the best,<br>
                            iLoop Team
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td style="background:#0e79bf;color:#fff; padding:10px 10px; font-size:13px; text-align:center"><a href="http://www.iloop.com/" style="color:#fff;">Home</a> | <a href="http://www.iloop.com/" style="color:#fff;">About</a> | <a href="http://www.iloop.com/" style="color:#fff;">News &amp; Features</a> | <a href="http://www.iloop.com/" style="color:#fff;">Products</a> | <a href="http://www.iloop.com/" style="color:#fff;">Contact Us</a></td>
        </tr>
        <tr>
            <td style="background:#0e79bf;color:#fff; padding:10px 10px; font-size:13px; text-align:center">&copy; <a href="http://www.iloop.com/" style="text-decoration:none; color:#fff;">@DateTime.Now.Year iLoop Inc.</a> | All Rights Reserved | <a href="http://www.iloop.com/" style="color:#fff;">Privacy Policy</a> | <a href="http://www.iloop.com/" style="color:#fff;">Terms and Conditions</a></td>
        </tr>
    </table>
</body>
