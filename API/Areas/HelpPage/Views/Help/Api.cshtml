<script>
    setTimeout(function () {
        replaceValues();
    }, 3000);

    function generateMail() {
        var body = 'Bug reported in "' + $('.uriPath').val() + '" ' + $('.httpMethod').val() + ' request.\r\n\r\n';
        body += "Please add any details related to the bug here:\r\n\r\n\r\n\r\n";
        var req = $('#requestBody').val();
        if (req.length > 1) {
            body += "Request Data:\r\n";
            body += $('#requestBody').val();
            body += "\r\n\r\n\r\n";
        }
        body += "Response Data:\r\n";
        body += $('#responseBody').val();
        body += '\r\n\r\n\r\n';
        window.location.href = "mailto:indira.sapkota@tektak.com?subject= Web API Bug Report&amp;cc=Abhisheksth@tektak.com&body=" + escape(body);
    }
</script>